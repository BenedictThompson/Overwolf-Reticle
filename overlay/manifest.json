{
  "manifest_version": "1",
  "type": "WebApp",
  "meta":{
    "name": "Reticle Overlay",
    "dock_button_title": "Reticle Overlay",
    "version": "15.2.1",
    "minimum-overwolf-version": "0.83.46.0",
    "author": "nacitar sevaht (Jacob McIntosh)",
    "description": "A simple overlay that adds a customizable crosshair to the center of your game window.  Supports transparency, saving and loading settings profiles, sharing your settings with friends, and using a URL to an external crosshair image for more elaborate usages.  A hotkey is used to open the settings window, and by default it is set to CTRL-SHIFT-Backspace but can be changed in the overwolf settings.",
    "icon": "IconMouseOver.png",
    "icon_gray": "IconMouseNormal.png",
    "store_icon": "store/IconSmall.png",
    "access-name": "com.ubercpp.reticle"
  },
  "data": {
    "windows": {
      "ReticleWindow": {
        "file": "files/reticle.html",
        "show_in_taskbar": false,
        "transparent": true,
        "resizable": false,
        "show_minimize": false,
        "clickthrough": true,
        "in_game_only": true,
        "size": {
          "width": 1024,
          "height": 768
        },
        "min_size": {
          "width": 1024,
          "height": 768
        },
        "max_size": {
          "width": 1024,
          "height": 768
        },
        "start_position": {
          "top": 0,
          "left": 0
        }
      },
      "SettingsWindow": {
        "file": "files/settings.html",
        "show_in_taskbar": false,
        "transparent": true,
        "resizable": true,
        "show_minimize": false,
        "clickthrough": false,
        "in_game_only": true,
        "size": {
          "width": 1024,
          "height": 768
        },
        "min_size": {
          "width": 1024,
          "height": 768
        },
        "max_size": {
          "width": 1024,
          "height": 768
        },
        "start_position": {
          "top": 0,
          "left": 0
        }
      }
    },
    "start_window": "ReticleWindow",
    "externally_connectable": {
      "matches": [
        "http://",
        "https://"
      ]
    },
    "plugins": [],
    "hotkeys": {
      "reticleSettings": {
        "title": "Toggle Reticle Settings",
        "default": "Ctrl+Shift+Back",
        "action-type": "custom"
      }
    },
    "launch_events": []
  }
}
